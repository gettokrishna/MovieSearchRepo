<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detail_view_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                tools:text="Spider Man"
                android:textSize="24sp"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                tools:text="Aron, a 5-year-old boy, sets together with his worried father on a journey at the end of which he wishes, like the superheroes in the comic books, to save his mother suffering from a heart condition."
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/langLable"
                    android:layout_width="wrap_content"
                    android:layout_weight="0"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Language : "
                    android:textSize="18sp"
                    android:textColor="@color/colorWhite"
                    />

                <TextView
                    android:id="@+id/language"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    tools:text="en"
                    android:textSize="18sp"
                    android:textColor="@color/colorWhite"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/releaseDateLable"
                    android:layout_width="wrap_content"
                    android:layout_weight="0"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Release Date : "
                    android:textSize="18sp"
                    android:textColor="@color/colorWhite"
                    />

                <TextView
                    android:id="@+id/releaseDate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    tools:text="2015-08-15"
                    android:textSize="18sp"
                    android:textColor="@color/colorWhite"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/likes_dislikes"
                        android:src="@mipmap/bubbles"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:visibility="visible"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/likes_dislikes_count"
                        tools:text="103456"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:textColor="@color/colorWhite"
                        android:layout_marginStart="11dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/votes"
                        android:src="@mipmap/star"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:visibility="visible"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/votes_avg"
                        tools:text="5.6 / 10"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:textColor="@color/colorWhite"
                        android:layout_marginStart="11dp"
                        />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>






</LinearLayout>